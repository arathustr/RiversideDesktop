{
  "name": "riverside-desktop",
  "private": true,
  "version": "0.1.22",
  "description": "Electron + Vue 3 desktop client for river-side.cc.",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "typecheck": "vue-tsc --noEmit",
    "dist:dir": "npm run build && electron-builder --win --dir",
    "dist": "npm run dist:dir"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fontsource-variable/inter": "^5.2.8",
    "dompurify": "^3.3.1",
    "remixicon": "^4.9.1",
    "vue": "^3.5.27"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.3.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vue-tsc": "^3.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "cc.river-side.desktop",
    "productName": "Riverside",
    "directories": {
      "output": "release"
    },
    "win": {
      "icon": "logo.ico",
      "signAndEditExecutable": false
    },
    "files": [
      "electron/**/*",
      "dist/renderer/**/*",
      "emoji.json",
      "logo.ico",
      "package.json"
    ],
    "asar": true
  }
}
